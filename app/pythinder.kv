MDScreen:
    MDToolbar:
        id: toolbar
        title: "Pythinder"
        elevation: 10
        pos_hint: {"top": 1}
        md_bg_color: app.theme_cls.primary_color
    MDSwiper:
        id: swiper
        size_hint_y: None
        height: root.height - toolbar.height - dp(80)
        y: root.height - self.height - toolbar.height - dp(20)
        MDSwiperItem:
            FitImage:
                size_hint_y: 1
                size_hint_x: 0.75
                source: "img/octo1.jpg"
                radius: [20,]

        MDSwiperItem:
            FitImage:
                size_hint_y: 1
                size_hint_x: 0.75
                source: "img/octo2.jpg"
                radius: [20,]
        MDSwiperItem:
            FitImage:
                size_hint_y: 1
                size_hint_x: 0.75
                source: "img/octo3.jpg"
                radius: [20,]

    BoxLayout:
        orientation: 'horizontal'
        padding: root.width/2-50, 0, 0, 10
        spacing: 10
        MDFloatingActionButton:
            icon: "close"
            md_bg_color: "#FFD43B"
            icon_color: "#306998"
        MDFloatingActionButton:
            icon: "heart"
            md_bg_color: "#FFD43B"
            icon_color: "#306998"
