MDScreen:
    MDSwiper:
        id: swiper
        size_hint_y: None
        height: root.height - dp(80)
        y: root.height - self.height - dp(20)
        MDSwiperItem:
            FitImage:
                size_hint_y: 1
                size_hint_x: 0.75
                source: "img/octo1.jpg"
                radius: [20,]

        MDSwiperItem:
            FitImage:
                size_hint_y: 1
                size_hint_x: 0.75
                source: "img/octo2.jpg"
                radius: [20,]
        MDSwiperItem:
            FitImage:
                size_hint_y: 1
                size_hint_x: 0.75
                source: "img/octo3.jpg"
                radius: [20,]
    MDBoxLayout:
        adaptive_height: True
        orientation: 'horizontal'
        padding: root.width/2-130, 0, 0, 20
        spacing: 10
        MDIconButton:
            icon: "close"
            theme_text_color: "Custom"
            md_bg_color: "#FFD43B"
            icon_color: "#306998"
        MDIconButton:
            icon: "heart"
            theme_text_color: "Custom"
            md_bg_color: "#FFD43B"
            icon_color: "#306998"
